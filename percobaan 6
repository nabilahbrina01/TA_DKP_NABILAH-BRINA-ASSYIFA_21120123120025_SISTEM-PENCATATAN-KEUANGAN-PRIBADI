import tkinter as tk

class KeuanganApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Aplikasi Pencatatan Keuangan Pribadi")
        
        # Buat frame untuk dashboard utama
        self.dashboard_frame = tk.Frame(self.root)
        self.dashboard_frame.pack(padx=20, pady=10)

        # Buat label-header untuk dashboard
        self.dashboard_label = tk.Label(self.dashboard_frame, text="Dashboard Utama", font=("Arial", 18, "bold"))
        self.dashboard_label.grid(row=0, column=0, columnspan=2)

        # Tambahkan komponen-komponen lainnya seperti ringkasan keuangan, grafik, dsb.

if __name__ == "__main__":
    root = tk.Tk()
    app = KeuanganApp(root)
    root.mainloop()
