import tkinter as tk
from tkinter import messagebox
from PIL import Image, ImageTk

def show_login_form():
    login_frame.pack(pady=10)

def submit_login():
    username = username_entry.get()
    email = email_entry.get()
    messagebox.showinfo("Login Info", f"Username: {username}\nEmail: {email}")

root = tk.Tk()
root.title("DuitkuRapih")
root.geometry("400x500")
root.configure(bg='blue')

# Load and display image
try:
    image = Image.open("path_to_your_image.jpg")
    image = image.resize((150, 150), Image.ANTIALIAS)
    photo = ImageTk.PhotoImage(image)
    img_label = tk.Label(root, image=photo, bg='blue')
    img_label.pack(pady=10)
except Exception as e:
    print(f"Error loading image: {e}")

# Display texts
tk.Label(root, text="DuitkuRapih", font=("Helvetica", 24), bg='blue', fg='white').pack(pady=10)
tk.Label(root, text="DuitkuRapih, hidupku tenang", font=("Helvetica", 14), bg='blue', fg='white').pack(pady=10)

# Login button
login_button = tk.Button(root, text="LOGIN", command=show_login_form)
login_button.pack(pady=10)

# Login form frame
login_frame = tk.Frame(root, bg='blue')

tk.Label(login_frame, text="Username:", bg='blue', fg='white').pack(pady=5)
username_entry = tk.Entry(login_frame)
username_entry.pack(pady=5)

tk.Label(login_frame, text="Email:", bg='blue', fg='white').pack(pady=5)
email_entry = tk.Entry(login_frame)
email_entry.pack(pady=5)

tk.Button(login_frame, text="Submit", command=submit_login).pack(pady=10)

root.mainloop()